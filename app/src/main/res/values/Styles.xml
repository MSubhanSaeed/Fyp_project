<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/code_input_background</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">18sp</item>
        </style>
    <style name="BottomNavButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/nav_button_default</item>
    </style>

    <!-- Optional colors -->
    <color name="transparent">#00000000</color>
    <color name="nav_button_default">#888888</color>
    <color name="nav_button_selected">#1E293B</color>

</resources>